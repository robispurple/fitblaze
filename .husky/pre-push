#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Prevent pushing to main branch
current_branch=$(git rev-parse --abbrev-ref HEAD)

if [ "$current_branch" = "main" ]; then
  echo "‚ùå ERROR: Pushing directly to 'main' is not allowed"
  echo ""
  echo "Guidelines:"
  echo "  1. Create a feature branch: git checkout -b feature/your-feature"
  echo "  2. Commit your changes"
  echo "  3. Push to your branch: git push origin feature/your-feature"
  echo "  4. Open a Pull Request on GitHub"
  echo ""
  exit 1
fi

exit 0
