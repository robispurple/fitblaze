@using FitBlaze.Features.Wiki.Models
@using FitBlaze.Features.Wiki.Services
@using Markdig
@inject PageService PageService
@inject NavigationManager Navigation

<div class="page-viewer">
    @if (isLoading)
    {
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    }
    else if (currentPage == null)
    {
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading">Page Not Found</h4>
            <p>The page you're looking for doesn't exist.</p>
            <hr>
            <a href="/wiki" class="btn btn-primary">Back to Pages</a>
        </div>
    }
    else
    {
        <div class="page-header">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h1>@currentPage.Title</h1>
                    <PageBreadcrumb PageId="currentPage.Id" OnNavigate="HandleNavigate" />
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-secondary" @onclick="EditPage">
                        <span class="oi oi-pencil"></span> Edit
                    </button>
                    <button type="button" class="btn btn-outline-danger" @onclick="DeletePage">
                        <span class="oi oi-trash"></span> Delete
                    </button>
                </div>
            </div>
            <small class="text-muted">
                Last modified: @currentPage.ModifiedDate.ToString("F")
            </small>
        </div>

        <div class="page-content">
            @((MarkupString)Markdown.ToHtml(currentPage.Content))
        </div>

        @if (!string.IsNullOrEmpty(currentPage.Tags))
        {
            <div class="page-tags">
                <strong>Tags:</strong>
                @foreach (var tag in currentPage.Tags.Split(','))
                {
                    <span class="badge bg-secondary">@tag.Trim()</span>
                }
            </div>
        }
    }
</div>

@code {
    [Parameter]
    public string? Slug { get; set; }

    private WikiPage? currentPage;
    private bool isLoading = true;

    protected override async Task OnParametersSetAsync()
    {
        if (!string.IsNullOrEmpty(Slug))
        {
            await LoadPage();
        }
    }

    private async Task LoadPage()
    {
        isLoading = true;
        try
        {
            currentPage = await PageService.GetPageBySlugAsync(Slug!);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading page: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void EditPage()
    {
        if (currentPage != null)
        {
            Navigation.NavigateTo($"/wiki/{currentPage.Slug}/edit");
        }
    }

    private async Task DeletePage()
    {
        if (currentPage != null && await ConfirmDelete())
        {
            try
            {
                await PageService.DeletePageAsync(currentPage.Id);
                Navigation.NavigateTo("/wiki");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting page: {ex.Message}");
            }
        }
    }

    private Task<bool> ConfirmDelete()
    {
        // In production, implement JS interop for confirm dialog
        // For now, just return true to demonstrate delete functionality
        return Task.FromResult(true);
    }

    private void HandleNavigate(string path)
    {
        Navigation.NavigateTo(path);
    }
}

