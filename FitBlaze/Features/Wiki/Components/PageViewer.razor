        padding: 1rem 0;
    }

    .page-header {
        border-bottom: 1px solid #dee2e6;
        padding-bottom: 1rem;
        margin-bottom: 2rem;
    }

    .page-header h1 {
        margin-bottom: 0.5rem;
    }

    .page-content {
        font-size: 1rem;
        line-height: 1.6;
        color: #212529;
    }

