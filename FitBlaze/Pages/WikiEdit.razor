@page "/wiki/{slug}/edit"
@layout MainLayout

@*
    Wiki Page Edit
    
    Provides the interface for editing an existing wiki page.
    
    Route: /wiki/{slug}/edit
    - slug: URL-friendly identifier of the page to edit
    
    Layout:
    - Left sidebar: Hierarchical page list (PageList component)
    - Main content: Page editor (PageEditor component) in edit mode
*@

<div class="wiki-container">
    <div class="wiki-sidebar">
        <PageList />
    </div>
    <div class="wiki-main">
         <PageEditor Slug="Slug" />
     </div>
</div>

@code {
     [Parameter]
     public string? Slug { get; set; }
 }

<style>
    .wiki-container {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 2rem;
    }

    .wiki-sidebar {
        border-right: 1px solid #dee2e6;
        padding-right: 1rem;
    }

    .wiki-main {
        padding: 1rem 0;
    }
</style>
